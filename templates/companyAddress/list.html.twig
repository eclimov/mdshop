<div>
    <h5>
        {% trans %}Addresses{% endtrans %}
        <a href="{{ url('companyAddress.create', {id: company.id}) }}" class="btn btn-sm btn-dark ml-auto" title="{% trans %}Create{% endtrans %}">+</a>
    </h5>
    <div class="mt-3 mb-4">
        <table class="table table-hover table-sm">
            <tr class="thead-dark">
                <th>{% trans %}Address{% endtrans %}</th>
                <th>{% trans %}Juridic{% endtrans %}</th>
                <th style="text-align: center;">{% trans %}Actions{% endtrans %}</th>
            </tr>
            {% for address in company.addresses %}
                <tr>
                    <td>
                        {{ address.address }}
                    </td>
                    <td>
                        {% if address.juridic %}
                            âœ”
                        {% endif %}
                    </td>
                    <td style="text-align: center;">
                        <a href="{{ url('companyAddress.edit', {id: address.id}) }}" style="margin: 5px; text-decoration: none;">
                            <button type="button" class="btn btn-secondary" title="{% trans %}Edit{% endtrans %}">
                                <span class="octicon octicon-pencil"></span>
                            </button>
                        </a>
                        <form action="{{ url('companyAddress.delete', {id: address.id}) }}" method="post" style="margin: 5px; display: inline;">
                            <button type="submit" class="btn btn-danger" title="{% trans %}Delete{% endtrans %}" onclick="return confirm('{% trans %}Are you sure you want to delete this object?{% endtrans %}');">
                                <span class="octicon octicon-trashcan"></span>
                            </button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
</div>

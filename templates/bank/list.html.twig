{% extends 'base.html.twig' %}

{% block title %}{% trans %}Banks{% endtrans %}{% endblock %}

{% block content %}
    <div>
        <a href="{{ url('bank.create') }}" class="btn btn-dark ml-auto">
            {% trans %}Create{% endtrans %}
        </a>
    </div>

    <div>
        <table class="table table-hover table-sm">
            <tr class="thead-dark">
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Created At{% endtrans %}</th>
                <th style="text-align: center;">{% trans %}Actions{% endtrans %}</th>
            </tr>
            {% for bank in banks %}
                <tr>
                    <td>
                        <a href="{{ url('bank.view', {id: bank.id}) }}">{{ bank.name }}</a>
                    </td>
                    <td>{{ bank.createdAt|date("d/m/Y h:s") }}</td>
                    <td style="text-align: center;">
                        <a href="{{ url('bank.edit', {id: bank.id}) }}" style="margin: 5px; text-decoration: none;">
                            <button type="button" class="btn btn-secondary" title="{% trans %}Edit{% endtrans %}">
                                <span class="octicon octicon-pencil"></span>
                            </button>
                        </a>
                        <form action="{{ url('bank.delete', {id: bank.id}) }}" method="post" style="margin: 5px; display: inline;">
                            <button type="submit" class="btn btn-danger" title="{% trans %}Delete{% endtrans %}" onclick="return confirm('{% trans %}Are you sure you want to delete this object?{% endtrans %}');">
                                <span class="octicon octicon-trashcan"></span>
                            </button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Invoices{% endblock %}

{% block body %}
    <div class="container mt-3 mb-4">
        <table class="table table-hover table-sm">
            <tr class="thead-dark">
                <th>Id</th>
                <th>Buyer</th>
                <th>Created At</th>
                <th style="text-align: center;">Actions</th>
            </tr>
            {% for invoice in invoices %}
                <tr>
                    <td>
                        <a href="{{ url('invoice.view', {id: invoice.id}) }}">{{ invoice.id }}</a>
                    </td>
                    <td>
                        {{ invoice.buyer.name }}
                    </td>
                    <td>{{ invoice.createdAt|date("d/m/Y h:s") }}</td>
                    <td style="text-align: center;">
                        <div>
                            <a href="{{ url('invoice.download', {id: invoice.id}) }}" style="margin: 5px; text-decoration: none;">
                                <button type="button" class="btn btn-primary" title="Download">
                                    <span class="octicon octicon-file"></span>
                                </button>
                            </a>
                            <a href="{{ url('invoice.edit', {id: invoice.id}) }}" style="margin: 5px; text-decoration: none;">
                                <button type="button" class="btn btn-secondary" title="Edit">
                                    <span class="octicon octicon-pencil"></span>
                                </button>
                            </a>
                            <form action="{{ url('invoice.delete', {id: invoice.id}) }}" method="post" style="margin: 5px; display: inline;">
                                <button type="submit" class="btn btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this invoice?');">
                                    <span class="octicon octicon-trashcan"></span>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}

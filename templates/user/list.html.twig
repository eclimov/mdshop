{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <a href="{{ url('user.create') }}" class="btn btn-dark ml-auto">Create New User</a>
    <div class="container mt-3 mb-4">
        <table class="table table-hover table-sm">
            <tr class="thead-dark">
                <th>Username</th>
                <th>Email</th>
                <th>Company</th>
                <th>Created At</th>
                <th style="text-align: center;">Actions</th>
            </tr>
            {% for user in users %}
                <tr>
                    <td>
                        {{ user.username }}
                    </td>
                    <td>
                        {{ user.email }}
                    </td>
                    <td>
                        {{ user.company ? user.company.fullName }}
                    </td>
                    <td>{{ user.createdAt|date("d/m/Y h:s") }}</td>
                    <td style="text-align: center;">
                        <div>
                            <a href="{{ url('user.edit', {id: user.id}) }}" style="margin: 5px; text-decoration: none;">
                                <button type="button" class="btn btn-secondary" title="Edit">
                                    <span class="octicon octicon-pencil"></span>
                                </button>
                            </a>
                            <form action="{{ url('user.delete', {id: user.id}) }}" method="post" style="margin: 5px; display: inline;">
                                <button type="submit" class="btn btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this user?');">
                                    <span class="octicon octicon-trashcan"></span>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Company Kinds{% endblock %}

{% block body %}
    <a href="{{ url('companyKind.create') }}" class="btn btn-dark ml-auto">Create New Company Kind</a>
    <div class="container mt-3 mb-4">
        <table class="table table-hover table-sm">
            <tr class="thead-dark">
                <th>Name</th>
                <th style="text-align: center;">Actions</th>
            </tr>
            {% for companyKind in companyKinds %}
                <tr>
                    <td>
                        {{ companyKind.name }}
                    </td>
                    <td style="text-align: center;">
                        <div>
                            <a href="{{ url('companyKind.edit', {id: companyKind.id}) }}" style="margin: 5px; text-decoration: none;">
                                <button type="button" class="btn btn-secondary" title="Edit">
                                    <span class="octicon octicon-pencil"></span>
                                </button>
                            </a>
                            <form action="{{ url('companyKind.delete', {id: companyKind.id}) }}" method="post" style="margin: 5px; display: inline;">
                                <button type="submit" class="btn btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this company kind?');">
                                    <span class="octicon octicon-trashcan"></span>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}

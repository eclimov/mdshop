<div>
    <h5>
        {% trans %}Employees{% endtrans %}
        <a href="{{ url('companyEmployee.create', {id: company.id}) }}" class="btn btn-sm btn-dark ml-auto" title="{% trans %}Create{% endtrans %}">+</a>
    </h5>
    <div class="container mt-3 mb-4">
        <table class="table table-hover table-sm">
            <tr class="thead-dark">
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Position{% endtrans %}</th>
                <th style="text-align: center;">{% trans %}Actions{% endtrans %}</th>
            </tr>
            {% for employee in company.employees %}
                <tr>
                    <td>
                        {{ employee.name }}
                    </td>
                    <td>
                        {{ employee.position }}
                    </td>
                    <td style="text-align: center;">
                        <div>
                            <a href="{{ url('companyEmployee.edit', {id: employee.id}) }}" style="margin: 5px; text-decoration: none;">
                                <button type="button" class="btn btn-secondary" title="{% trans %}Edit{% endtrans %}">
                                    <span class="octicon octicon-pencil"></span>
                                </button>
                            </a>
                            <form action="{{ url('companyEmployee.delete', {id: employee.id}) }}" method="post" style="margin: 5px; display: inline;">
                                <button type="submit" class="btn btn-danger" title="{% trans %}Delete{% endtrans %}" onclick="return confirm('{% trans %}Are you sure you want to delete this object?{% endtrans %}');">
                                    <span class="octicon octicon-trashcan"></span>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
</div>
